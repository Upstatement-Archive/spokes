{% extends "base.twig" %}

{% block content %}

	<section class="page-intro-about">
			<h1 class="intro-h1 home-intro">About BFC</h1>
			<img class="intro-stars" src="/wp-content/themes/spokes/images/intro-stars.png" />	
			<h2 class="intro-h2">{{post.intro}}</h2>
			<a class="btn btn-donate" href="http://www2.pmc.org/profile/TP0083" target="_blank">Join the Fight</a>
	</section><!-- /page-intro -->

	<section class="page-sub-intro">
		<div class="page-mod">
			<div class="sub-intro-txt-mod">
			<h3 class="sub-intro-txt">{{post.post_content}}</h3>
			</div><!-- /sub-intro-txt-mod -->
		</div><!-- /page-mod -->	
	</section><!-- /page-sub-intro -->

	<section class="team-profiles">
		<div class="page-mod">
			<div class="profiles-mod">
				{% for rider in post.team %}
					<div class="team-member media-block">
						<div class="rider-img-mod">
							<img class="rider-img" src="{{rider.image.url}}">
						</div><!-- /rider-img-mod -->
						<p><strong>{{rider.name}}</strong> â€“ {{rider.bio}}</p>
					</div><!-- /team-member -->
				{% endfor %}
			</div><!-- /profiles-mod -->	
		</div><!-- /page-mod -->			
	</section><!-- /team-profiles -->	

	<section class="page-sub-txt about-sub-txt">
		<div class="page-mod">
			<div class="sub-txt-mod">
				<h4 class="section-h1">Bikes Fight Cancer and The PMC</h4>
				<p class="sub-txt">{{ post.pmc }}</p>
			</div><!-- /sub-txt-mod -->
		</div><!-- /page-mod -->	
	</section><!-- /page-sub-txt -->

	<!-- this loops gets the team members -->
