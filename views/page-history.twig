{% extends "base.twig" %}

{% block content %}

	<section class="page-intro-history">
			<h1 class="intro-h1 home-intro">History</h1>
			<img class="intro-stars" src="/wp-content/themes/spokes/images/intro-stars.png" />			
			<h2 class="intro-h2">{{post.intro}}</h2>
			<a class="btn btn-donate">Make History</a>
	</section><!-- /page-intro -->	

	<section class="history-list-mod">

		{% for child in post.get_children %}
			<article class="history-year card-effect-lg">
				<img class="year-tz-img" src="{{child.get_thumbnail.get_src}}"/>
				<div class="year-tz-txt-mod">
					<h5 class="tz-h1"><a href="{{child.permalink}}">{{child.title}}</a></h5>
					<p class="tz-txt">{{child.get_preview(25)}}</p>
				</div><!-- /year-tz-txt-mod -->	
		</article><!-- /history-year -->

		{% endfor %}
	</section><!-- /history-list-mod -->	

{% endblock %}