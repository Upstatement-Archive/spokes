{% extends "base.twig" %}

{% block content %}

	{% if post.get_thumbnail %}
		<div class="post-intro-img">
			<img src="{{post.get_thumbnail.get_src}}" alt="alt text"/>
		</div>
	{% else %}
		<div class="no-hero">
	{% endif %}

	<div class="post-content-topper"></div>
	
	<div class="post-content-mod">
			<div class="section-hd-mod">
				<img class="section-icon" src="/wp-content/themes/spokes/images/icon-blog.png">
				<h4 class="section-h1">Blog</h4>
			</div><!-- /section-hd-mod -->	

			<h1 class="post-h1">{{post.title}}</h1>
			<div class="byline">by {{post.author.display_name}}</div><!-- /byline -->
			<div class="single-content">
				{{post.get_content}}
			</div><!-- /single-content -->
	</div> <!-- /post-content-mod -->	

	{% if not post.get_thumnail %}
		</div>
	{% endif %}

{% endblock %}