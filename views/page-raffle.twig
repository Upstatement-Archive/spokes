{% extends "base.twig" %}

{% block content %}

	<section class="page-intro-raffle">
			<h1 class="intro-h1 home-intro">Raffle Time!</h1>
			<img class="intro-stars" src="/wp-content/themes/spokes/images/intro-stars.png" />
			<h2 class="intro-h2">{{post.intro}}</h2>
			<a class="btn btn-donate" href="http://www2.pmc.org/profile/TP0083" target="_blank">Get Lucky</a>
	</section><!-- /page-intro -->

	<section class="page-sub-intro">
		<div class="page-mod">
			<div class="sub-intro-txt-mod">
			<h3 class="sub-intro-txt">{{post.post_content}}</h3>
			</div><!-- /sub-intro-txt-mod -->
		</div><!-- /page-mod -->	
	</section><!-- /page-sub-intro -->	


	<section class="raffle-sub-txt">
		<div class="page-mod">
			<div class="raffle-ui-group">
				<div class="raffle-sub-txt-mod ui-block-1">
					<h4 class="section-h1">How the Raffle Works</h4>
						{{post.info}}
				</div><!-- /raffle-sub-txt-mod -->
				<div class="raffle-shirt-modz ui-block-2">
					<img class="raffle-shirt" src="{{post.shirt.url}}" />
				</div><!-- /raffle-shirt-mod -->
			</div><!-- /raffle-ui-group -->	
		</div><!-- /page-mod -->	
	</section><!-- /raffle-sub-txt -->

	<section class="raffle-list">
		<div class="page-mod"> 
			<div class="raffle-list-mod"> 
				<img class="section-icon" src="/wp-content/themes/spokes/images/icon-raffle.png" />
				<h4 class="section-h1">The 2013 Raffle</h4>
				<div class="raffle-content">
					{{post.winners}}
				</div>
			</div><!-- /raffle-list-mod -->
		</div><!-- /page-mod -->
	</section><!-- /raffle-list -->

{% endblock %}