{% extends "base.twig" %}

{% block content %}

	<section class="page-intro-raffle">
			<h1 class="intro-h1 about-intro">Raffle Time!</h1>
			<h2 class="intro-h2">{{post.intro}}</h2>
			<a class="btn btn-donate">Get Lucky</a>
	</section><!-- /page-intro -->

	<section class="page-sub-intro">
		<div class="page-mod">
			<div class="sub-intro-txt-mod">
			<h3 class="sub-intro-txt">{{post.post_content}}</h3>
			</div><!-- /sub-intro-txt-mod -->
		</div><!-- /page-mod -->	
	</section><!-- /page-sub-intro -->	

	<section class="raffle-list">
		<div class="page-mod"> 
			<div class="raffle-list-mod"> 

				<img class="section-icon" src="/wp-content/themes/spokes/images/icon-blog.png">
				<h4 class="section-h1">The 2013 Raffle</h4>

				<div class="raffle-content">
					{{post.winners}}
				</div>
			</div><!-- /raffle-list-mod -->
		</div><!-- /page-mod -->
	</section><!-- /raffle-list -->

{% endblock %}